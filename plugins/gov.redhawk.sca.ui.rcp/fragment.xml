<?eclipse version="3.4"?>
<fragment>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="gov.redhawk.ui.category.sca"
            class="gov.redhawk.sca.ui.views.ScaExplorerRcp"
            icon="icons/obj16/sca_explorer.png"
            id="gov.redhawk.ui.sca_explorer"
            name="%view.name"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=group.edit">
         <command
               commandId="org.eclipse.ui.edit.copy"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     ifEmpty="false">
                  <instanceof
                        value="gov.redhawk.model.sca.ScaFileStore">
                  </instanceof>
               </iterate>
            </visibleWhen>
         </command>
         <command
               commandId="org.eclipse.ui.edit.paste"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     ifEmpty="false">
                  <instanceof
                        value="gov.redhawk.model.sca.ScaFileStore">
                  </instanceof>
               </iterate>
            </visibleWhen>
         </command>
     </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="gov.redhawk.sca.internal.ui.handlers.ScaFileStoreCopyHandler"
            commandId="org.eclipse.ui.edit.copy">
         <activeWhen>
            <iterate
                  ifEmpty="false">
               <instanceof
                     value="gov.redhawk.model.sca.ScaFileStore">
               </instanceof>
            </iterate>
         </activeWhen>
      </handler>
      <handler
            class="gov.redhawk.sca.internal.ui.handlers.ScaFileStorePastActionHandler"
            commandId="org.eclipse.ui.edit.paste">
         <activeWhen>
            <iterate
                  ifEmpty="false">
               <instanceof
                     value="gov.redhawk.model.sca.ScaFileStore">
               </instanceof>
            </iterate>
         </activeWhen>
         <enabledWhen>
            <count
                  value="1">
            </count>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="gov.redhawk.sca.ui.preferences.RedhawkPreferenceInitializer">
      </initializer>
   </extension>

</fragment>
