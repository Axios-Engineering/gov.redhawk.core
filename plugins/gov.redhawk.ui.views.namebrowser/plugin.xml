<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="true"
            category="gov.redhawk.ui.category.sca"
            class="gov.redhawk.ui.views.namebrowser.view.NameBrowserView"
            icon="icons/view.gif"
            id="gov.redhawk.ui.views.namebrowserview"
            name="CORBA Name Browser"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="gov.redhawk.ui.views.namebrowser.internal.command.DomainManagerTester"
            id="gov.redhawk.ui.views.namebrowser.command.DomainManagerTester"
            namespace="gov.redhawk.ui.views.namebrowser"
            properties="isDomainManager"
            type="gov.redhawk.ui.views.namebrowser.view.BindingNode">
      </propertyTester>
      <propertyTester
            class="gov.redhawk.ui.views.namebrowser.internal.command.BindingNodeTypeTester"
            id="gov.redhawk.ui.views.namebrowser.command.BindingNodeTypeTester"
            namespace="gov.redhawk.ui.views.namebrowser"
            properties="isType"
            type="gov.redhawk.ui.views.namebrowser.view.BindingNode">
      </propertyTester>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:gov.redhawk.ui.views.namebrowserview">
         <command
               commandId="org.eclipse.ui.file.refresh"
               style="push">
         </command>
         <command
               commandId="gov.redhawk.ui.views.namebrowser.command.connectDomain"
               icon="icons/add.gif"
               label="Connect to Domain"
               style="push"
               tooltip="Connect to this Domain">
            <visibleWhen
                  checkEnabled="true">
                  <iterate>
                     <instanceof
                           value="gov.redhawk.ui.views.namebrowser.view.BindingNode">
                     </instanceof>
                  </iterate>
            </visibleWhen>
         </command>
         <command
               commandId="org.eclipse.ui.edit.delete"
               icon="icons/disconnect.png"
               label="Disconnect"
               style="push"
               tooltip="Disconnect from host">
            <visibleWhen
                  checkEnabled="false">
                  <iterate>
                     <and>
                        <instanceof
                              value="gov.redhawk.ui.views.namebrowser.view.BindingNode">
                        </instanceof>
                        <test
                              args="ROOT"
                              property="gov.redhawk.ui.views.namebrowser.isType">
                        </test>
                     </and>
                  </iterate>
            </visibleWhen>
         </command>
         <command
               commandId="org.eclipse.ui.edit.delete"
               label="Unbind"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     ifEmpty="false">
                  <and>
                     <test
                           args="OBJECT"
                           property="gov.redhawk.ui.views.namebrowser.isType">
                     </test>
                     <instanceof
                           value="gov.redhawk.ui.views.namebrowser.view.BindingNode">
                     </instanceof>
                  </and>
               </iterate>
            </visibleWhen>
         </command>
         <command
               commandId="org.eclipse.ui.edit.delete"
               label="Remove Context"
               style="push">
            <visibleWhen
                  checkEnabled="true">
               <iterate
                     ifEmpty="false">
                  <and>
                     <test
                           args="CONTEXT"
                           property="gov.redhawk.ui.views.namebrowser.isType">
                     </test>
                     <instanceof
                           value="gov.redhawk.ui.views.namebrowser.view.BindingNode">
                     </instanceof>
                  </and>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="gov.redhawk.ui.views.namebrowser.internal.command.Disconnect"
            commandId="org.eclipse.ui.edit.delete">
         <activeWhen>
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <and>
                     <instanceof
                           value="gov.redhawk.ui.views.namebrowser.view.BindingNode">
                     </instanceof>
                     <test
                           args="ROOT"
                           property="gov.redhawk.ui.views.namebrowser.isType">
                     </test>
                  </and>
               </iterate>
         </activeWhen>
      </handler>
      <handler
            class="gov.redhawk.ui.views.namebrowser.internal.command.Refresh"
            commandId="org.eclipse.ui.file.refresh">
         <activeWhen>
            <iterate
                  ifEmpty="false"
                  operator="or">
               <instanceof
                     value="gov.redhawk.ui.views.namebrowser.view.BindingNode">
               </instanceof>
            </iterate>
         </activeWhen>
      </handler>
      <handler
            class="gov.redhawk.ui.views.namebrowser.internal.command.RemoveContext"
            commandId="org.eclipse.ui.edit.delete">
         <activeWhen>
           <iterate
                 ifEmpty="false">
              <and>
                 <test
                       args="CONTEXT"
                       property="gov.redhawk.ui.views.namebrowser.isType">
                 </test>
                 <instanceof
                       value="gov.redhawk.ui.views.namebrowser.view.BindingNode">
                 </instanceof>
              </and>
           </iterate>
         </activeWhen>
      </handler>
      <handler
            class="gov.redhawk.ui.views.namebrowser.internal.command.UnbindObject"
            commandId="org.eclipse.ui.edit.delete">
         <activeWhen>
           <iterate
                 ifEmpty="false">
              <and>
                 <test
                       args="OBJECT"
                       property="gov.redhawk.ui.views.namebrowser.isType">
                 </test>
                 <instanceof
                       value="gov.redhawk.ui.views.namebrowser.view.BindingNode">
                 </instanceof>
              </and>
           </iterate>
         </activeWhen>
      </handler>
      <handler
            class="gov.redhawk.ui.views.namebrowser.internal.command.ConnectToDomainHandler"
            commandId="gov.redhawk.ui.views.namebrowser.command.connectDomain">
         <activeWhen>
               <iterate
                     ifEmpty="false">
                  <and>
                     <instanceof
                           value="gov.redhawk.ui.views.namebrowser.view.BindingNode">
                     </instanceof>
                     <test
                           property="gov.redhawk.ui.views.namebrowser.isDomainManager">
                     </test>
                  </and>
               </iterate>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            description="Connect to Domain"
            id="gov.redhawk.ui.views.namebrowser.command.connectDomain"
            name="ConnectDomain">
      </command>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="gov.redhawk.ui.views.namebrowser.view.BindingNode"
            class="gov.redhawk.ui.views.namebrowser.view.internal.BindingNodeAdapterFactory">
         <adapter
               type="org.eclipse.ui.model.IWorkbenchAdapter">
         </adapter>
         <adapter
               type="org.eclipse.ui.progress.IDeferredWorkbenchAdapter">
         </adapter>
      </factory>
   </extension>

</plugin>
