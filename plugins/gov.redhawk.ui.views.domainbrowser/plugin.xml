<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="true"
            category="gov.redhawk.ui.category.sca"
            class="gov.redhawk.ui.views.domainbrowser.view.DomainBrowserView"
            icon="icons/TreeViewer.png"
            id="gov.redhawk.ui.views.domainbrowserview"
            name="Domain Browser"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="gov.redhawk.ui.views.domainbrowser.actions.CollapseAllHandler"
            description="Minimize All Items in Domain Tree"
            id="gov.redhawk.ui.views.domainbrowser.command.collapseAll"
            name="Collapse All">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:gov.redhawk.ui.views.ossiebrowserview.popupMenu?after=additions">
         <command
               commandId="gov.redhawk.ui.views.domainbrowser.command.collapseAll"
               icon="icons/collapseall.gif"
               label="Collapse All"
               style="push"
               tooltip="Collapse All Items In Tree">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:gov.redhawk.ui.views.ossiebrowserview.popupMenu?after=additions">
         <command
               commandId="gov.redhawk.ui.command.waveform.install"
               icon="icons/install.gif"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     ifEmpty="false">
                  <instanceof
                        value="gov.redhawk.model.sca.provider.ScaWaveformFactoriesContainerItemProvider">
                  </instanceof>
               </iterate>
            </visibleWhen>
         </command>
         <command
               commandId="gov.redhawk.ui.command.waveform.launch"
               icon="icons/new_waveform.gif"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     ifEmpty="false">
                  <or>
                     <instanceof
                           value="gov.redhawk.model.sca.ScaDomainManager">
                     </instanceof>
                     <instanceof
                           value="gov.redhawk.model.sca.provider.ScaWaveformsContainerItemProvider">
                     </instanceof>
                     <instanceof
                           value="gov.redhawk.model.sca.ScaWaveformFactory">
                     </instanceof>
                  </or>
               </iterate>
            </visibleWhen>
         </command>
          <command
               commandId="org.eclipse.ui.edit.delete"
               label="Uninstall"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     ifEmpty="false">
                  <instanceof
                        value="gov.redhawk.model.sca.ScaWaveformFactory">
                  </instanceof>
               </iterate>
            </visibleWhen>
         </command>
                  <command
               commandId="gov.redhawk.ui.command.resource.start"
               icon="icons/play.gif"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     ifEmpty="false">
                  <adapt
                        type="CF.ResourceOperations">
                  </adapt>
               </iterate>
            </visibleWhen>
         </command>
         <command
               commandId="gov.redhawk.ui.command.resource.stop"
               icon="icons/stop.png"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     ifEmpty="false">
                  <adapt
                        type="CF.ResourceOperations">
                  </adapt>
               </iterate>
            </visibleWhen>
         </command>
		<command
               commandId="org.eclipse.ui.edit.delete"
               label="Release"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     ifEmpty="false">
                  <adapt
                        type="CF.LifeCycleOperations">
                  </adapt>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:gov.redhawk.ui.views.domainbrowserview">
         <command
               commandId="gov.redhawk.ui.views.domainbrowser.addDomain"
               icon="icons/add.gif"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="gov.redhawk.ui.views.domainbrowser.application.Perspective"
            id="gov.redhawk.ui.views.domainbrowser.perspective1"
            name="SCA Domain Browser">
      </perspective>
   </extension>
   <extension
         id="domainbrowser"
         point="org.eclipse.core.runtime.applications">
      <application
            cardinality="singleton-global"
            thread="main"
            visible="true">
         <run
               class="gov.redhawk.ui.views.domainbrowser.application.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="gov.redhawk.ui.views.domainbrowser.view.handlers.NewDomainHandler"
            id="gov.redhawk.ui.views.domainbrowser.addDomain"
            name="Add Domain Connection">
      </command>
   </extension>
</plugin>
